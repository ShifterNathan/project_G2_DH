<!DOCTYPE html>

<html>
    
    <!-- Include Head -->
    <%- include('partials/head', {title: 'Suscripción'}) %>

<body>
    
    <!-- Header -->
    <%- include('./partials/header') %> 

    <!-- Formulario de registro -->
<form action="/usuario/registro" method="POST">
    <div class="mb-3 mt-3">
        <label for="email">Email</label>
        <input type="email" name="email" class="form-control">
    </div>
    <div class="mb-3 mt-3">
        <label for="email">Repetir email</label>
        <input type="email" name="repeat_email" class="form-control">
    </div>
    <div class="mb-3 mt-3">
        <label for="password">Contraseña</label>
        <input type="password" name="password" class="form-control">
    </div>
    <div class="mb-3 mt-3">
        <label for="password">Repetir contraseña</label>
        <input type="password" name="repeat_password" class="form-control">
    </div>
    <button type="submit" class="btn btn-light mt-3">Bienvenidos
    <i class="fa-solid fa-paw"></i></button>
</form>

    <!-- Footer -->
<div>
    <%- include('./partials/footer') %>
    </div>
    
    </body>
    
    </html>