<header>
    <!-------------------- MENU DE NAVEGACIÓN ---------------------->
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark p-md-3">
        <div class="container">
            <a href="/" class="navbar-brand">
                <img src="/img/isologotipoNav.png" class="img-fluid">
            </a>
            <button type="button" class="navbar-toggler"
                data-bs-target="#navbarNav" 
                data-bs-toggle="collapse" 
                aria-controls="navbarNav" 
                aria-expanded="false"
                aria-label="Toggle Navbar"
            >
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="nav navbar-nav ">
                    <li class="nav-item active">
                        <a href="/" class="nav-link text-white text-decoration-none">Inicio</a>
                    </li>
                    <!--<li class="nav-item">
                        <a href="" class="nav-link text-white text-decoration-none">Acerca De</a>-->
                       
                        
                        
                    <li class="nav-item">
                        <a href="/tienda" class="nav-link text-white text-decoration-none">Tienda</a>
                    </li>
                    
                </ul>
                <div class="mx-auto"></div>
                <ul class="nav navbar-nav">
                    <% if (locals.isLogged) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white " 
                                 id="dropUser" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <% if (user.imagen) { %>
                                    <img class="userIMG" src="/img/avatars/<%= user.imagen %>">
                                <% } else { %>
                                    <img class="userIMG" src="/img/avatars/default_user.png">
                                <% } %>
                                <%= user.nombre %>
                            </a>
                            
                            <ul class="dropdown-menu dropdown-menu-end " aria-labelledby="navbarDropdown">
                                <div class=" dropdown-header noti-title">
                                    <h6 class="text-overflow m-0">Bienvénido!</h6>
                                </div>
                                <a class="dropdown-item" href=""><i class="fa-solid fa-cart-shopping"></i> Carrito de compras</a>
                                <a class="dropdown-item" href="/usuario/perfil"><i class="fa-solid fa-user"></i> Mi cuenta</a>
                                <a class="dropdown-item" href="/usuario/salir"><i class="fa-solid fa-right-from-bracket"></i> Salir</a>
                                
                            </ul>
                            
                        </li>
                        <li class="nav-item cart">
                            <a class="text-white text-decoration-none"><i class="fa-solid fa-cart-shopping"></i>
                                <span>0</span>
                            </a>
                        </li>

                    <% } else { %>
                        <li class="nav-item">
                            <a href="/usuario/registro" class="nav-link text-white text-decoration-none" 
                            role="button">Regístrate</a>
                        </li>
                        <li class="nav-item">
                            <a href="/usuario/ingreso" class="nav-link text-white text-decoration-none" 
                            role="button">Ingresa</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    

    <!-------------------- EFECTO SCROLL DEL NAVBAR ---------------------->
    <script>
        var nav = document.querySelector('nav');
        window.addEventListener('scroll', function () {
            if (window.pageYOffset > 100) {
                nav.classList.add('bg-black', 'shadow');
            } else {
                nav.classList.remove('bg-black', 'shadow');
            }
        });
    </script>
</header>